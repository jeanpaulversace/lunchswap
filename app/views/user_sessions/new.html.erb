<h1>Login</h1>
<br><br>
<%= form_for @user_session, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
  <% if @user_session.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited:</h2>
    <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
      <%= f.label :email, :class => "col-md-4 control-lab"%>
    <div class="col-md-4">
      <%= f.text_field :email, :class => "form-control input-md" %>
    </div>
  </div>
 <div class="form-group">
      <%= f.label :password, :class => "col-md-4 control-lab" %>
    <div class="col-md-4">
      <%= f.password_field :password, :class => "form-control input-md" %>
    </div>
  </div>
  <center>
  <div class="form-group">
    <br><br>
    <div class="col-md-4" style="margin-left: 33.5%">
      <%= f.submit "Login", :class => "btn btn-primary" %>
    </div>
  </div>
  </center>
<% end %>